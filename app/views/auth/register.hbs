<div class="container">
    {{#if error}}
    <div class="alert alert-danger my-3">
        {{error}}
    </div>
    {{/if}}
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <form method="post" action="http://localhost:4000/register">
                <div class="mb-3">
                    <label for="first_name" class="form-label">First name address</label>
                    <input type="text" class="form-control" id="first_name" name="first_name">
                </div>
                <div class="mb-3">
                    <label for="last_name" class="form-label">Last name address</label>
                    <input type="text" class="form-control" id="last_name" name="last_name">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
            <a href="/login" class="mt-3 d-block">Have account? Login!</a>
        </div>
    </div>
</div>