<div class="container">
    <div class="row">
        <div class="col-12 col-md-6">
            <div class="ratio ratio-4x3">
                <img src="{{product.image}}" alt="" srcset="" class="object-fit-contain">
            </div>
        </div>
        <div class="col-12 col-md-6">
            <h1 class="fs-3">{{product.title}}</h1>
            <p class="fs-3">Category: {{product.category.title}}</p>
            <p class="fs-4">{{product.price}}$</p>
            <p class="fs-5">{{product.description}}</p>
        </div>
    </div>
</div>