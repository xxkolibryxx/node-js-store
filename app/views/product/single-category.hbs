<div class="container">
    <h1 class="text-center my-4">{{category.name}}</h1>
</div>
<div class="container mb-4">
    <div class="row">
        <div class="col-6">
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    Category
                </button>
                <ul class="dropdown-menu">
                    {{#each categories}}
                    <li><a class="dropdown-item" href="/category/{{this.id}}">{{this.name}}</a></li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-6">
            <div class="d-flex justify-content-end align-items-center">
                <a href="" class="btn btn-success">Filter</a>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        {{#each products}}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
            <div class="card h-100">
                <div class="ratio ratio-4x3">
                    <img src="{{this.image}}" class="p-4 object-fit-contain" alt="{{this.name}}">
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fs-6">{{this.name}}</h5>
                    <div class="card-info flex-fill">
                        <p class="card-text">{{this.description}}</p>
                    </div>
                    <p class="card-text fw-bold">Price: {{this.price}} ÷è</p>
                    <a href="/products/{{this.id}}" class="btn btn-primary">Add to cart</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>