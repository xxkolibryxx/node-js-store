<div class="container">
    <h1 class="text-center my-4">{{category.title}}</h1>
</div>
{{> product-filter}}
<div class="container">
    <div class="row">
        {{#each products}}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
            <div class="card h-100">
                <div class="ratio ratio-4x3">
                    <img src="{{this.image}}" class="p-4 object-fit-contain" alt="{{this.name}}">
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fs-6">{{this.title}}</h5>
                    <div class="card-info flex-fill">
                        <p class="card-text">{{this.description}}</p>
                    </div>
                    <p class="card-text fw-bold">Price: {{this.price}} ÷è</p>
                    <a href="/products/{{this.id}}" class="btn btn-primary">Add to cart</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>