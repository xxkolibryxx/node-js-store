<div class="container">
    <div class="shadow p-3 mt-4">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each cart}}
                <tr>
                    <th>
                        <img src="/uploads/{{this.image}}" width="50" height="50">
                    </th>
                    <td class="align-middle">{{this.title}}</td>
                    <td class="align-middle">{{this.price}} ֏</td>
                    <td class="align-middle">{{this.quantity}}</td>
                    <td class="align-middle">
                        <button class="btn btn-danger delete-cart-item" data-product-id="{{this.id}}">Delete</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <p><b>Total:</b> {{totalPrice}} ֏</p>
    </div>
</div>