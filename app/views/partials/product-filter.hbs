<div class="container mb-4">
    <div class="row">
        <div class="col-6">
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    Category
                </button>
                <ul class="dropdown-menu">
                    {{#each categories}}
                    <li><a class="dropdown-item" href="/category/{{this.id}}">{{this.name}}</a></li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>